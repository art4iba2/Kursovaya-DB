@model skress.Models.DataPassTable

@{
    ViewData["Title"] = "Create";
}

<h1>Создание записи</h1>

<h4>DataPassTable</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id_Track" class="control-label"></label>
                <input asp-for="Id_Track" class="form-control" />
                <span asp-validation-for="Id_Track" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Pass" class="control-label"></label>
                <input asp-for="Id_Pass" class="form-control" />
                <span asp-validation-for="Id_Pass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePass" class="control-label"></label>
                <input asp-for="DatePass" class="form-control" />
                <span asp-validation-for="DatePass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
