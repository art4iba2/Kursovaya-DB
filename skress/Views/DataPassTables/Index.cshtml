@model IEnumerable<skress.Models.DataPassTable>

@{
    ViewData["Title"] = "Index";
}

<h1>Данные о проходах</h1>

<!-- Форма фильтрации -->
<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group">
        <label for="startDate" class="mr-2">Дата начала:</label>
        <input type="date" id="startDate" name="startDate"
               class="form-control mr-2" value="@ViewBag.StartDate" />
    </div>
    <div class="form-group">
        <label for="endDate" class="mr-2">Дата окончания:</label>
        <input type="date" id="endDate" name="endDate"
               class="form-control mr-2" value="@ViewBag.EndDate" />
    </div>
    <button type="submit" class="btn btn-primary">Фильтровать</button>
</form>

<!-- Ссылка для сброса фильтра -->
<p>
    <a asp-action="Index" class="btn btn-secondary">Сбросить фильтр</a>
</p>

<p>
    <a asp-action="Create">Создать новую запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Название трека
            </th>
            <th>
                ID Пропуска
            </th>
            <th>
                Дата прохода
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Any())
    {
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Track.NameTrack)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id_Pass)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatePass)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id_datapass">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id_datapass">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id_datapass">Delete</a>
                    </td>
                </tr>
        }
    }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Нет данных для отображения</td>
            </tr>
        }
    </tbody>
</table>
