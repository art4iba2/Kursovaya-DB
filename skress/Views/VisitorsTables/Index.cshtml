@model IEnumerable<skress.Models.VisitorsTable>

@{
    ViewData["Title"] = "Index";
}

<h1>Посетители</h1>

<p>
    <a asp-action="Create">Создание записи</a>
</p>
<form asp-controller="VisitorsTables" asp-action="Index" method="get">
    <p>
        Имя: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthdayDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthdayDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_visitor">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Id_visitor">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_visitor">Удаление</a>
            </td>
        </tr>
}
    </tbody>
</table>
