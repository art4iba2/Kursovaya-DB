@model skress.Models.DataInstructorTable

@{
    ViewData["Title"] = "Details";
}

<h1>Детали</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id_Event)
        </dd>
        <dt class="col-sm-2">
            Посетитель
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id_visitor)
        </dd>
        <dt class="col-sm-2">
            Инструктор
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id_Instructor)
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Время начала
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeStart)
        </dd>
        <dt class="col-sm-2">
            Время окончания
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeEnd)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id_Event">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
